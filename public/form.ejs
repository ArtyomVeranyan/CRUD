<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="div3">
        <h1>Please, fill in all fields</h1>
    </div>
    <div class="div1">
        <h1>User's List</h1>
    </div>
    <div class="div2">
        <table>
            <tr>
                <td>Name</td>
                <td>Price</td>
                <td>Image</td>
                <td>Description</td>
                <td>UUID</td>
                <td>Type</td>
                <td>Location</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
            <% info.forEach(function(justOne) { %>
                <tr>
                    <td>
                        <%= justOne.name %>
                    </td>
                    <td>
                        <%= justOne.price %>
                    </td>
                    <td>
                        <%= justOne.image %>
                    </td>
                    <td>
                        <%= justOne.description %>
                    </td>
                    <td>
                        <%= justOne.uuid %>
                    </td>
                    <td>
                        <%= justOne.type %>
                    </td>
                    <td>
                        <%= justOne.location %>
                    </td>
                    <td><a class="update" href="update/<%= justOne._id %>">Update</a></td>
                    <td><a class="delete" href="delete/<%= justOne._id %>">Delete</a></td>
                </tr>
                <% }); %>
        </table>
    </div>
    <div class="container">
        <form action="/addName" method="post">
            <input class="input1" id="PrName" type="text" required name="name" placeholder="Name"><br><br>
            <input class="input1" id="PrPrice" type="number" name="price" placeholder="Price"><br><br>
            <input class="input1" id="PrImage" type="text" name="image" placeholder="Image"><br><br>
            <input class="input1" id="PrDes" type="text" name="description" placeholder="Description"><br><br>
            <input class="input1" id="PrUUID" type="number" name="uuid" placeholder="UUID"><br><br>
            <input class="input1" id="PrType" type="text" name="type" placeholder="Type"><br><br>
            <input class="input1" id="PrLocation" type="text" name="location" placeholder="Location"><br><br>
            <input class="input1" id="id" type="hidden" name="id"><br><br>
            <button class="input2" onclick="getVal()" role="button">submit</button>
        </form>
    </div>
    <script src="script.js"></script>
</body>

</html>
